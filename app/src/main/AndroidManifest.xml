<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joonhuiwong.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/booklogo_mini"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/booklogo_mini"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity
            android:name=".activities.AddEditBookActivity"
            android:label="@string/add_new_book_activity_label"
            android:parentActivityName=".activities.AllBooksActivity" />
        <activity android:name=".activities.WebsiteActivity" />
        <activity
            android:name=".activities.FavoriteBookActivity"
            android:label="@string/favorite_books_label" />
        <activity
            android:name=".activities.CurrentlyReadingBookActivity"
            android:label="@string/currently_reading_books_label" />
        <activity
            android:name=".activities.WantToReadBookActivity"
            android:label="@string/want_to_read_books_label" />
        <activity
            android:name=".activities.AlreadyReadBookActivity"
            android:label="@string/already_read_books_label" />
        <activity android:name=".activities.BookActivity" />
        <activity
            android:name=".activities.AllBooksActivity"
            android:label="@string/all_books_label" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>